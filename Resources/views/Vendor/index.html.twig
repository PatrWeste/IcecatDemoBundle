{% extends 'PimIcecatDemoBundle::layout.html.twig' %}

{% set title = 'Vendors overview'|trans %}

{% block head_script %}
    {{ parent() }}
    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#vendor-grid'} %}
{% endblock %}

{% block content %}

<div class="navigation clearfix navbar-extra navbar-extra-right">
    {% set buttons %}
        {{ elements.createBtn(
            'vendor',
            null,
            { id: "create-vendor", "data-form": "dialog", "data-form-url": path('pim_icecatdemo_vendor_quickcreate') }
        ) }}
        <script type="text/javascript">
            require(
                ['jquery', 'pim/dialogform'],
                function ($, dialogForm) {
                    'use strict';
                    $(function() {
                        new dialogForm('#create-vendor');
                    });
                }
            );
        </script>
    {% endset %}

    {{ elements.page_header(title, buttons, null) }}
</div>

<div id="vendor-grid"></div>
{% endblock %}
